    "version": "0.2.0",
    "configurations": [

        {
            "name": "bpp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/devkit/i86-bpp",
            "args": ["test.s","include/stdlib.bpp","include/standalone.bpp","boot/stage2.bpp"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "preLaunchTask": "make sdk",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}